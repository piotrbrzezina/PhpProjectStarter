    nginx:
        build:
            context: .
            target: nginx
            dockerfile: ./docker/Dockerfile
        image: {{ clientName|lower }}/{{ projectName|lower }}/nginx:latest
        ports:
            - "${APP_WEB_PORT:-80}:80"

    php:
        build:
            context: .
            target: builder
            dockerfile: ./docker/Dockerfile
        image: {{ clientName|lower }}/{{ projectName|lower }}/php:latest
        volumes:
            - .:/opt/app
            - ./docker/php-fpm/php.ini:/etc/php/7.3/fpm/conf.d/99-overrides.ini
